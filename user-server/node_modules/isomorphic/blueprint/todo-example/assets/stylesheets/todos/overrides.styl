#todo-list li .edit
  display inline

.header-plus
  color  #4d4d4d
  font-size 24px
  vertical-align top

#todoapp
.todo-lists
  position relative
  margin 150px 0 40px 0
  h1
    top -150px
    cursor pointer
  h2
    font-size 14px
    margin 0
    position absolute
    top -40px
    text-align center
    width 100%
    color #4d4d4d
    font-weight normal
    font-style italic

.todo-lists
  h1
    margin-top 59px
    position absolute
    width 100%
    font-size 70px
    font-weight bold
    text-align center
    color #b3b3b3
    color rgba(255, 255, 255, 0.3)
    text-shadow -1px -1px rgba(0, 0, 0, 0.2)
    text-rendering optimizeLegibility

  .todo-list
    display inline-block
    width 182px
    height 97px
    background url('images/todo-list.png') no-repeat
    padding 35px 20px
    box-sizing border-box
    font-size 24px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    text-decoration none
    text-align center
    color #4d4f4d

    &.new-list
      background none
      color #b3b3b3

      &:after
        content ""
        display block
        position absolute
        top 0
        left 0
        background url('images/todo-list.png') no-repeat
        width 100%
        height 100%
        opacity 0.5
        z-index -1

  .new-list-contain
    display inline-block
    position relative
